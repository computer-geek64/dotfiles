[module/check-openvpn]
type = custom/script

exec = pgrep openvpn
interval = 5

format = <label>
format-foreground = ${colors.foreground}
label = VPN

[module/dnf-updates]
type = custom/script

exec = dnf list upgrades > /dev/null; echo "$(dnf list upgrades | wc -l)-2" | bc
interval = 1000

format = <label>
format-foreground = ${colors.foreground}
label = %{F#000000}âŸ³%{F-} %output%

